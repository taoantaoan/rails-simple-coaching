<div class="container">
  <h1>Stupid Coaching</h1>

  <blockquote>
    <p>
      <% if @question.blank? %>
        ""
      <% else %>
        <%=@question%>
      <% end %>
    </p>
    <cite>You</cite>
  </blockquote>
  <blockquote class="coach">
    <p><%=@answer%></p>
    <cite>Your coach</cite>
  </blockquote>
  <span class="btn-submit"><%= link_to "Ask a new question", ask_path %></span>
</div>




